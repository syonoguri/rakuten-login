extends layout

block content
  .containerC
    h1 Login Page
    p ユーザ名とパスワードを入力してください。
    br
  #form-container
    form(role='form', action="/login",method="post", style='max-width: 300px;')
        input.form-control(type='text', name="username", placeholder='Enter Username')
        input.form-control(type='password', name="password", placeholder='Password')
      button.beautifulButton(type='submit') SignIn
      a(href='/')
        button.beautifulButton(type="button") Cancel
    if expressFlash
      if expressFlash.length > 0
        p <strong>エラーメッセージ:</strong> #{ expressFlash }
        
    form(role='form', action="/signUp",method="post", style='max-width: 300px;')
        input.form-control(type='text', name="username", placeholder='Enter Username')
        input.form-control(type='password', name="password", placeholder='Password')
      button.beautifulButton(type='submit') SignUp